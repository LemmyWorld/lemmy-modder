{
  "name": "lemmy-modder-app",
  "productName": "Lemmy Modder",
  "version": "0.1.2",
  "description": "Lemmy Moderation Frontend",
  "author": "tgxn",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "start": "electron src/app.js",
    "bundle:prod": "cd ./frontend && npm run build",
    "build:win": "electron-builder --win nsis portable --x64",
    "build:win:publish": "electron-builder --win nsis portable --x64 --publish always",
    "build:win32": "electron-builder --win --ia32",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --x64"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "net.tgxn.lemmy.modder",
    "productName": "Lemmy Modder",
    "generateUpdatesFilesForAllChannels": false,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "src/",
      "frontend/dist/",
      "icon/"
    ],
    "win": {
      "artifactName": "LemmyModder.${version}.Portable.x64.${ext}",
      "compression": "maximum",
      "publisherName": "tgxn",
      "icon": "./icon/Lemmy_Logo.png"
    },
    "nsis": {
      "artifactName": "LemmyModder.${version}.Setup.x64.${ext}",
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "artifactName": "LemmyModder-${version}-Snap.${ext}",
      "target": "snap",
      "icon": "./icon/Lemmy_Logo.png",
      "desktop": {
        "Name": "LemmyModder",
        "icon": "./icon/Lemmy_Logo.png",
        "Encoding": "UTF-8"
      }
    },
    "publish": {
      "provider": "github",
      "repo": "lemmy-modder",
      "owner": "tgxn"
    }
  }
}
