{
  "name": "lemmy-modder-app",
  "productName": "Lemmy Modder",
  "version": "0.1.0",
  "description": "Lemmy Moderation Frontend",
  "author": "tgxn",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "start": "electron src/app.js",
    "bundle:prod": "cd ./frontend && npm run build",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --x64"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "net.tgxn.lemmy.modder",
    "productName": "Lemmy Modder",
    "generateUpdatesFilesForAllChannels": false,
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "src/",
      "frontend/dist/",
      "icon/"
    ],
    "win": {
      "artifactName": "LemmyModder-${version}-portable.${ext}",
      "compression": "maximum",
      "target": "portable",
      "publisherName": "tgxn",
      "icon": "./icon/Lemmy_Logo.png"
    },
    "linux": {
      "artifactName": "LemmyModder-${version}-portable.${ext}",
      "target": "snap",
      "icon": "./icon/Lemmy_Logo.png",
      "desktop": {
        "Name": "LemmyModder",
        "icon": "./icon/Lemmy_Logo.png",
        "Encoding": "UTF-8"
      }
    }
  }
}
